<Window x:Class="Audiosort.StringEntryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Audiosort" ResizeMode="NoResize" ShowInTaskbar="False"
        SizeToContent="WidthAndHeight" Icon="/audiosort.ico">
    <StackPanel>
        <DockPanel>
            <TextBlock Margin="10" Text="Text:" Height="22" Width="67" />
            <TextBox Margin="10" x:Name="ResponseTextBox" />
        </DockPanel>
        <DockPanel>
            <Button Margin="10" Content="OK" Click="Button_Click" Width="100" IsDefault="True" />
            <Button Margin="10" Content="Abbrechen" Click="Button_Click_1" Width="100" IsCancel="True" />
        </DockPanel>
    </StackPanel>
</Window>